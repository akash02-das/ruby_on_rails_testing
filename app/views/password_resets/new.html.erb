<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mt-5">
      <div class="card-header">
        <h1>Forgot your password?</h1>
      </div>
      <div class="card-body">
        <%= form_with url: password_reset_path do |form| %>
          <div class="mb-3">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control', placeholder: 'Enter a valid email' %>
          </div>
          <div class="mb-3">
            <%= form.submit 'Reset Password', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>